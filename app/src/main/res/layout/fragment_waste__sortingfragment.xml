<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".AI_Eco_Dashboard.wastesorting.Waste_Sortingfragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:clipToPadding="false"
            android:paddingBottom="32dp"
            android:paddingTop="32dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_recycle"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waste Classifier"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
            </LinearLayout>

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a step towards a cleaner planet ðŸŒ"
                android:textSize="14sp"
                android:textColor="#757575"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_waste"
                android:background="@drawable/image_border"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnUploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select or Capture Image"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textPrediction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waste Category: -"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="24dp" />

            <!-- NEW: Mapped Category (Recyclable, Organic, Hazardous) -->
            <TextView
                android:id="@+id/textMappedCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: -"
                android:textSize="16sp"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:gravity="center" />

            <!-- NEW: Motivational Tip -->
            <TextView
                android:id="@+id/motivationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're making a difference â€” one item at a time! ðŸŒ±"
                android:textSize="14sp"
                android:textColor="#555555"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/footerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for sorting your waste responsibly! â™»ï¸"
                android:textSize="14sp"
                android:textColor="#555555"
                android:gravity="center"
                android:layout_marginTop="24dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
