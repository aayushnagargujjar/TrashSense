<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your activity"
            android:textSize="24sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp" />

        <!-- Motivational Quote -->
        <TextView
            android:id="@+id/tv_motivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“Every small act makes a big impact on our planet 🌍”"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <!-- Activity Grid -->
        <GridLayout
            android:id="@+id/activity_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false">

            <!-- Repeatable item layout -->
            <!-- Item 1 -->
            <LinearLayout
                android:id="@+id/DailyActivities_PickedUpTrash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_trash"
                    android:contentDescription="Picked up trash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Picked up trash"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <!-- Item 2 -->
            <LinearLayout
                android:id="@+id/DailyActivities_HelpedTheAnimals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_animals"
                    android:contentDescription="Helped the animals" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helped the animals"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <!-- Continue this pattern for the rest... -->

            <LinearLayout
                android:id="@+id/DailyActivities_UpcycledRenewed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_upcycle"
                    android:contentDescription="Upcycled renewed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcycled renewed"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DailyActivities_GrownOwnGroceries"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_growownngroceries"
                    android:contentDescription="Grown own groceries" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grown own groceries"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DailyActivities_BoughtOrganicProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_organic"
                    android:contentDescription="Bought organic product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bought organic product"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DailyActivities_MyOwnEcoActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_eco"
                    android:contentDescription="My own eco activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My own eco activity"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="8dp" />
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
