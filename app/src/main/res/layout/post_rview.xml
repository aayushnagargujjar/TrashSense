<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="16dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/Home_post_pf_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/account_circle_24px"
            android:contentDescription="Profile Icon"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title or Username -->
        <TextView
            android:id="@+id/Home_post_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sustainable Tip"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/Home_post_pf_pic"
            app:layout_constraintStart_toEndOf="@+id/Home_post_pf_pic"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tip Text -->
        <TextView
            android:id="@+id/Home_post_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Eco-friendly suggestion will be displayed here with helpful tips and action items."
            android:textColor="#444444"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:maxLines="5"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/Home_post_username"
            app:layout_constraintStart_toStartOf="@id/Home_post_username"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Recommendation Image -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="Suggested Image"
            android:background="@drawable/rounded_image_background"
            app:layout_constraintTop_toBottomOf="@id/Home_post_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
