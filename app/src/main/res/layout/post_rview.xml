<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7dp"
    android:layout_marginHorizontal="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/Home_post_pf_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/account_circle_24px"
            android:contentDescription="User Profile"
            android:scaleType="centerCrop"
            android:background="@drawable/account_circle_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/Home_post_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EcoWarrior"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/Home_post_pf_pic"
            app:layout_constraintStart_toEndOf="@id/Home_post_pf_pic"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/Home_post_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Try using a reusable water bottle instead of buying plastic ones every day!"
            android:textColor="#555555"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/Home_post_username"
            app:layout_constraintStart_toStartOf="@id/Home_post_username"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background"
            android:contentDescription="Eco Suggestion Image"
            app:layout_constraintTop_toBottomOf="@id/Home_post_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
